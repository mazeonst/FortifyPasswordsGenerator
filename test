max_count = 0
current_count = 1
prev_number = int(input("Введите число: "))

while prev_number != 0:
    current_number = int(input("Введите следующее число: "))
    
    if current_number == prev_number:
        current_count += 1
    else:
        current_count = 1
    
    if current_count > max_count:
        max_count = current_count
    
    prev_number = current_number

print("Наибольшее число подряд идущих элементов:", max_count)
